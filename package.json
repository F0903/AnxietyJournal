{
	"name": "anxietyjournal",
	"version": "0.8.4",
	"description": "A simple tool for taking note of your anxiety.",
	"main": "src/main.js",
	"private": true,
	"scripts": {
		"build:dev": "webpack",
		"build:pub": "webpack --mode=production",
		"start": "npm run build:dev && electron out/src/main.js",
		"package": "npm run build:pub && electron-builder",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"build": {
		"appId": "AnxietyJournal",
		"productName": "Anxiety Journal",
		"files": [
			{
				"from": "./out",
				"to": "./"
			}
		],
		"directories": {
			"output": "./bin/"
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"tar.gz"
			]
		}
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"fs-extra": "^8.1",
		"mongodb": "^3.6",
		"mongodb-client-encryption": "^1.2.5",
		"xlsx": "^0.17"
	},
	"devDependencies": {
		"@types/app-root-path": "^1.2",
		"@types/fs-extra": "^9.0",
		"@types/mongodb": "^3.6",
		"@typescript-eslint/eslint-plugin": "*",
		"@typescript-eslint/parser": "*",
		"app-root-path": "^3.0",
		"copy-webpack-plugin": "^9.0.0",
		"electron": "^13",
		"electron-builder": "*",
		"eslint": "^7.27",
		"eslint-config-prettier": "^8.3",
		"prettier": "^2.3",
		"ts-loader": "^9.2.3",
		"typescript": "^4.3.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.2"
	}
}
